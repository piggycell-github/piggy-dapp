    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
